# ============================================================================
# Shopify Configuration
# ============================================================================
# Get these from your Shopify Partner Dashboard
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_SCOPES=write_products,read_products,write_orders,read_orders

# ============================================================================
# Vapi Voice AI Configuration
# ============================================================================
# Get these from your Vapi dashboard at https://dashboard.vapi.ai
VAPI_API_KEY=your_vapi_api_key
VAPI_PUBLIC_KEY=your_vapi_public_key

# ============================================================================
# Supabase Configuration
# ============================================================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key

# ============================================================================
# Sentry Error Tracking
# ============================================================================
# Get this from your Sentry project settings
SENTRY_DSN=your_sentry_dsn

# ============================================================================
# Application URLs
# ============================================================================
# Public URL where your app will be accessible
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================================================
# Environment
# ============================================================================
# Allowed values: development, staging, production
NODE_ENV=development
